{
  "name": "@repo/gnome-extension",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "scripts/build.sh",
    "session": "dbus-run-session -- gnome-shell --nested --wayland",
    "tsc": "tsc --noEmit",
    "lint": "eslint src --report-unused-disable-directives --no-error-on-unmatched-pattern"
  },
  "dependencies": {
    "@girs/gjs": "4.0.0-beta.38",
    "@girs/gnome-shell": "^49.1.0",
    "@girs/meta-17": "^17.0.0-4.0.0-beta.38"
  },
  "devDependencies": {
    "@girs/soup-3.0": "3.6.5-4.0.0-beta.38",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*"
  },
  "lint-staged": {
    "*.{mjs,cjs,json,jsonc,html,css,md,yml,yaml}": [
      "prettier --write --ignore-unknown"
    ],
    "*.{js,jsx,ts,tsx}": [
      "prettier --write --ignore-unknown",
      "eslint --report-unused-disable-directives --no-warn-ignored --max-warnings 0 --no-error-on-unmatched-pattern"
    ]
  }
}
